<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/layout_margin"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/button_simple"
        android:text="@string/simple_activity_title"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />

    <Button
        android:id="@+id/button_handler"
        android:text="@string/handler_activity_title"
        android:textAllCaps="false"
        android:layout_below="@+id/button_simple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />

    <Button
        android:id="@+id/button_observable"
        android:text="@string/observable_objects_activity"
        android:textAllCaps="false"
        android:layout_below="@+id/button_handler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="clickHandler"
            type="com.marcosvbras.androiddatabinding.ClickHandler"/>
        <variable
            name="example"
            type="com.marcosvbras.androiddatabinding.ExampleObject"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="vertical"
        tools:context=".ClickHandlerActivity">

        <Button
            android:text="@string/button_one"
            android:textAllCaps="false"
            android:onClick="@{(view) -> clickHandler.onClick(view, example.get())}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="@string/button_two"
            android:textAllCaps="false"
            android:onLongClick="@{(view) -> clickHandler.onLongClick(view)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>